@{
  Layout = "_Layout";
}

@using HairSalon.Models

<h1>Eau Claire's Salon Stylist Portal:</h1>

@if(@Model.Count == 0)
{
  <h3>No Stylists are in the database.</h3>
}

@foreach (Stylist stylist in Model)
{
  <p>@Html.ActionLink($"{stylist.NameFirst} {stylist.NameLast}", "Show", new { id = stylist.StylistId })</p>    
}
<br>
<p>@Html.ActionLink("Add new Stylist", "Create")</p>
<br>
<p>@Html.ActionLink("Client Portal", "Index", "Clients")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>