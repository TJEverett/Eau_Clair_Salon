@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<h4>Add a new Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.NameFirst)
  @Html.TextBoxFor(model => model.NameFirst, new { required="required" })
  <br>
  @Html.LabelFor(model => model.NameLast)
  @Html.TextBoxFor(model => model.NameLast, new { required="required" })
  <br>
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty, new { required="required" })
  <br>
  <input type="submit" value="Add New Stylist">
}
<br>
<p>@Html.ActionLink("Show All Stylists", "Index")</p>